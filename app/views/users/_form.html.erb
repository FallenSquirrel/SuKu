<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table border="0" cellpadding="0" cellspacing="4">
  	<tr class="field">
		<td><%= f.label :Vorname %></td>
  		<td><%= f.text_field :lastname %></td>
  	</tr>
  	<tr>
    	<td><%= f.label :Nachname %></td>
    	<td><%= f.text_field :firstname %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :Titel %></td>
    <td><%= f.select :title, [['Vorstand','Vorstand'],['Beirat','Beirat'],['Fotograf','Fotograf'],['Administrator', 'Administrator']] %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :Aufgabe %></td>
    <td><%= f.text_field :job %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :email %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :Passwort %></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr class="field">
    <td><%= f.label "Passwort-BestÃ¤tigung" %></td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
 </table>
  <div class="actions"><%= f.submit %></div>
<% end %>