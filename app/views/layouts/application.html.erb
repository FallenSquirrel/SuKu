<!DOCTYPE html>
<html>
<head>
  <title>SuKu</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= init_tinymce_hammer_if_required %>
</head>
<body>
<div class="global_wrapper">
	
<div class="global_header">
	<div class="header_logo">
		<%= image_tag "logo.jpg" %>
	</div>
	<div class="header_text">
		Subkultur e.V<br />
		Auf der Lände 7<br />
		82256 Fürstenfeldbruck<br />
		<br />
		Tel.: 08141 - 159 20<br />
		E-Mail: info@subkultur-ffb.de
	</div>
</div>

<%= clear_float %>

<div class="global_menu">
	<% if session[:username] %>
	<% else %>
		<ul>
			<li><%= link_to "Events", list_events_path, :class => "menu_link", :id => "menu_link_events" %></li>
			<li><%= link_to "About", "/StaticPages?id=about", :class => "menu_link", :id => "menu_link_about" %></li>
			<li><%= link_to "Guestbook", guestbook_path, :class => "menu_link", :id => "menu_link_guestbook" %></li>
			<li><%= link_to "Archiv", "/Archive", :class => "menu_link", :id => "menu_link_archive" %></li>
		</ul>
	<% end %>
</div>

<div class="global_content">
	<% flash.each do |name, msg| %>
    	<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	<%= yield(:content) or yield %>
</div>

<%= clear_float %>

<div class="global_footer">
	<%= image_tag "hr.gif" %>
	<br />
	&copy; 2013 subkultur e.V. &middot;
	<%= link_to "home", "/" %>
	&middot;
	<%= link_to "contact", "/StaticPages?id=about&subid=address" %>
	&middot;
	<%= link_to "disclaimer", "/StaticPages?id=about&subid=disclaimer" %>
	&middot;
	login
</div>

</div>
</body>
</html>
